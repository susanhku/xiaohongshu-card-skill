<script>
async function downloadCard(cardId, filename) {
  const loading = document.getElementById('loading');
  document.getElementById('loading-text').textContent = `æ­£åœ¨ç”Ÿæˆ ${filename}...`;
  loading.style.display = 'flex';

  await document.fonts.ready;
  const card = document.getElementById(cardId);
  const origTransform = card.style.transform;
  const origMargin = card.style.marginBottom;
  card.style.transform = 'scale(1)';
  card.style.marginBottom = '0';

  try {
    const canvas = await html2canvas(card, {
      width: 1080, height: 1440, scale: 2,
      useCORS: true, allowTaint: false, logging: false
    });
    canvas.toBlob(blob => {
      saveAs(blob, filename);
      loading.style.display = 'none';
    }, 'image/jpeg', 0.95);
  } catch(e) {
    alert('å¯¼å‡ºå¤±è´¥ï¼š' + e.message);
    loading.style.display = 'none';
  }

  card.style.transform = origTransform;
  card.style.marginBottom = origMargin;
}

async function downloadAll() {
  const loading = document.getElementById('loading');
  loading.style.display = 'flex';
  await document.fonts.ready;

  const zip = new JSZip();
  const units = document.querySelectorAll('.card-unit');

  for (let i = 0; i < units.length; i++) {
    const card = units[i].querySelector('.card');
    document.getElementById('loading-text').textContent =
      `æ­£åœ¨å¤„ç†ç¬¬ ${i+1} / ${units.length} å¼ ...`;

    const origTransform = card.style.transform;
    const origMargin = card.style.marginBottom;
    card.style.transform = 'scale(1)';
    card.style.marginBottom = '0';

    const canvas = await html2canvas(card, {
      width: 1080, height: 1440, scale: 2,
      useCORS: true, allowTaint: false, logging: false
    });

    card.style.transform = origTransform;
    card.style.marginBottom = origMargin;

    const blob = await new Promise(r => canvas.toBlob(r, 'image/jpeg', 0.95));
    zip.file(`${String(i+1).padStart(2,'0')}_card.jpg`, blob);
  }

  document.getElementById('loading-text').textContent = 'æ‰“åŒ…ä¸­...';
  const content = await zip.generateAsync({ type: 'blob' });
  saveAs(content, 'å°çº¢ä¹¦å¡ç‰‡.zip');
  loading.style.display = 'none';
}
</script>
</body>
</html>
